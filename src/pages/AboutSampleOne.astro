<style>
    section{
        min-height: 100dvh;
        width: 100%;
        display: grid;
        align-content: center;
        background-image: url(https://img.freepik.com/free-photo/3d-rendering-isometric-house_23-2150727962.jpg?t=st=1705962708~exp=1705966308~hmac=956c0a356c3f31650e965e197068168c2fb973aa65176791c8a7ba2b0e3815ae&w=740);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 5rem 0 1rem 0;
        overflow: hidden;

    }
    img{
        display: none;
    }
    article{
        display: grid;
        width: 90%;
        margin: 0 auto;
        background: #FFFFFF22;
        backdrop-filter: blur(0.75rem);
        padding: 2rem;
        border-radius: 0.25rem;
        gap: 0.75rem;
    }
    h2{
        font-size: 2rem;
        color: var(--accent);
        text-align: center;
        margin-bottom: 0.75rem;
    }
    p{
        margin: 8px 0 20px 0;
    }
    @media (width >= 640px) {
        section{
        grid-template-columns: repeat(10, 1fr);
        grid-template-rows: repeat(6, 1fr);
        background-image: none;
        padding: 0;

        }
        img{
            display: unset;
            height: 100%;
            width: 60%;
            grid-row: 1/7;
            grid-column: 1/6;
            object-fit: cover;
            position: absolute;
        }
        article{
            grid-column: 5/10;
            grid-row: 2/6;
            width: 100%;
            margin: 0;
            background: #FFFFFF;
            justify-items: left;
            align-content: center;
            gap: 1.5rem;

            transform-style: preserve-3d;
            transform: 
            perspective(4000px)
            rotateY(-15deg)
            rotateX(20deg);
            box-shadow: 3px 3px 5px;
        }
        h2{
            text-shadow: 3px 3px 8px #000000AA;
            text-align: left;
        }
        h3{
            font-size: 1.5rem;
        }
    }
</style>